<style>
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }
    
    li {
      float: left;
    }
    
    li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }
    
    li a:hover:not(.active) {
      background-color: #111;
    }
    .logout {
      background-color: red;
    }
    
    .active {
      background-color: #18c8d4;
    }

    .active:hover {
      background-color: #3f6a6d;
    }

    </style>
    </head>
    <body>
    
    <ul>
      <li><a class="active" href="/">RuangTK</a></li>
      <div <%= userInfo ? '' : 'hidden' %>>
        <li style="float: right;"><a class="logout" href="/logout">Logout</a></li>
        <li style="float: right;"><a href="/profile/<%= userInfo.id %>">Hi, <%= userInfo.name %> (<%= userInfo.role %>)</a> </li>

      </div>
    </ul>
    
    </body>